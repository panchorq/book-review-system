<h1>Nuevo Libro</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> impidió que este libro se guardara:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, 'Título del libro' %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Libro", class: 'btn btn-success mt-2 mb-2' %>
  </div>
<% end %>

<%= link_to 'Volver a la lista de libros', books_path, class: 'btn btn-secondary' %>